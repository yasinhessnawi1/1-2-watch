<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E0E0E0" /> <!-- Light grey color -->

    <!-- Corner radius -->
    <corners android:radius="12dp" />

    <!-- Optional: Add a subtle shadow effect -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Slightly darker grey for the border -->
</shape>